<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uneatlantico.unehorario">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DiaListActivity"
            android:label="@string/title_dia_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DiaDetailActivity"
            android:label="@string/title_dia_detail"
            android:parentActivityName=".DiaListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneatlantico.unehorario.DiaListActivity" />
        </activity>
        <activity
            android:name=".InsertarEvento"
            android:label="@string/title_activity_insertar_evento"
            android:parentActivityName=".DiaListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneatlantico.unehorario.DiaListActivity" />
        </activity>
        <activity
            android:name=".EditarEvento"
            android:label="@string/title_activity_editar_evento"
            android:parentActivityName=".DiaDetailActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneatlantico.unehorario.DiaDetailActivity" />
        </activity>
        <activity
            android:name=".EditEvento"
            android:label="@string/title_activity_edit_evento"
            android:parentActivityName=".DiaListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uneatlantico.unehorario.DiaListActivity" />
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Main3Activity"
            android:label="@string/title_activity_main3"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>